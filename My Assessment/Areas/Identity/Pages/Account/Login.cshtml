@page
@model LoginModel

@{
    ViewData["Title"] = "Log in to Employee Management";
}

<div class="login-container d-flex justify-content-center align-items-center vh-100">
    <div class="card login-card shadow-lg rounded-4 p-4 animate__animated animate__fadeInDown" style="width: 400px;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Log in to Employee Management</h2>
            <p class="text-muted">Please enter your credentials</p>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control rounded-3 custom-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control rounded-3 custom-input" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe"></label>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary w-100 rounded-3 py-2 login-btn">
                <i class="bi bi-box-arrow-in-right"></i> Log in
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

