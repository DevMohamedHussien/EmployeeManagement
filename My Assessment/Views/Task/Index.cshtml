@model List<MyAssessment.Core.Entities.TaskItem>

@{
    ViewData["Title"] = "Tasks";
}

<h2>Tasks Management</h2>
<a asp-action="Create" asp-controller="Task" asp-area="" class="btn btn-primary mb-4">Create New Task</a>

<table id="productsTable" class="table table-bordered table-hover table-striped">
    <thead >
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Assigned Employee</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Status</td>
                    <td>@task.Employee?.FullName</td>
                    <td>
                        <a asp-controller="Task" asp-action="Update" asp-route-taskId="@task.Id" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No tasks found</td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jszip-2.5.0/dt-1.10.21/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/b-print-1.6.2/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/jszip-2.5.0/dt-1.10.21/b-1.6.2/b-colvis-1.6.2/b-flash-1.6.2/b-html5-1.6.2/b-print-1.6.2/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#productsTable').DataTable();
        });</script>
}
