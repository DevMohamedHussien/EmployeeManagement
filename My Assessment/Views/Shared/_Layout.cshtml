@using Microsoft.AspNetCore.Identity
@inject UserManager<MyAssessment.DataAccess.Data.AppUser> _userManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My_Assessment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/My_Assessment.styles.css" asp-append-version="true" />
    <title>Department Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <style>
      :root {
          --primary-color: #4e73df;
          --secondary-color: #6f42c1;
          --accent-color: #36b9cc;
          --light-bg: #f8f9fc;
      }

      body {
          background-color: var(--light-bg);
          font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
          padding-bottom: 2rem;
      }

      .page-header {
          background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
          color: white;
          padding: 2rem 0;
          margin-bottom: 2rem;
          border-radius: 0 0 15px 15px;
          box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
      }

      .card {
          border: none;
          border-radius: 12px;
          box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
          transition: transform 0.3s ease, box-shadow 0.3s ease;
          overflow: hidden;
      }

      .card:hover {
          transform: translateY(-5px);
          box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
      }

      .card-header {
          background: linear-gradient(120deg, var(--primary-color), var(--accent-color));
          color: white;
          font-weight: 600;
          border-radius: 12px 12px 0 0 !important;
          padding: 1.2rem 1.5rem;
      }

      .btn-primary {
          background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
          border: none;
          border-radius: 8px;
          padding: 0.6rem 1.5rem;
          transition: all 0.3s ease;
      }

      .btn-primary:hover {
          transform: translateY(-2px);
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }

      .btn-danger {
          border-radius: 8px;
          padding: 0.5rem 1rem;
          transition: all 0.3s ease;
      }

      .btn-danger:hover {
          transform: translateY(-2px);
          box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
      }

      .table-hover tbody tr {
          transition: all 0.3s ease;
      }

      .table-hover tbody tr:hover {
          background-color: rgba(78, 115, 223, 0.1);
          transform: translateX(5px);
      }

      .dataTables_wrapper {
          padding: 0 10px;
      }

      .fade-in {
          animation: fadeIn 0.6s ease-in;
      }

      @@keyframes fadeIn {
          from { opacity: 0; transform: translateY(20px); }
          to { opacity: 1; transform: translateY(0); }
      }

      .slide-in-left {
          animation: slideInLeft 0.5s ease-out;
      }

      @@keyframes slideInLeft {
          from { opacity: 0; transform: translateX(-30px); }
          to { opacity: 1; transform: translateX(0); }
      }

      .search-box {
          border-radius: 25px;
          padding: 0.5rem 1.5rem;
          border: 1px solid #ddd;
          transition: all 0.3s ease;
      }

      .search-box:focus {
          box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.25);
          border-color: var(--primary-color);
      }

      .action-buttons {
          white-space: nowrap;
      }

      .empty-state {
          text-align: center;
          padding: 2rem;
          color: #6c757d;
      }

      .empty-state i {
          font-size: 5rem;
          margin-bottom: 1rem;
          color: #dee2e6;
      }

      .department-icon {
          width: 40px;
          height: 40px;
          background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
          border-radius: 50%;
          display: flex;
          align-items: center;
          justify-content: center;
          color: white;
          font-weight: bold;
          margin-right: 12px;
      }

      .stats-card {
          text-align: center;
          padding: 1.5rem;
      }

      .stats-number {
          font-size: 2.5rem;
          font-weight: 700;
          color: var(--primary-color);
          margin: 0.5rem 0;
      }

      .stats-label {
          color: #6c757d;
          font-weight: 600;
          text-transform: uppercase;
          letter-spacing: 1px;
          font-size: 0.85rem;
      }
    </style>
    <style>
                /* Background gradient */
                .login-container {
                    /*            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        */ animation: fadeBackground 6s infinite alternate;
                }

                /* Animated background shift */
                @@keyframes fadeBackground {
                    0% {
                        background-position: left;
                    }

                    100% {
                        background-position: right;
                    }
                }

                /* Input focus glow */
                .custom-input:focus {
                    border-color: #2575fc;
                    box-shadow: 0 0 8px rgba(37, 117, 252, 0.6);
                    transition: 0.3s;
                }

                /* Button hover effect */
                .login-btn {
                    transition: all 0.3s ease-in-out;
                }

                    .login-btn:hover {
                        background-color: #1a5edb;
                        transform: translateY(-2px) scale(1.02);
                        box-shadow: 0 6px 12px rgba(0,0,0,0.2);
                    }

                .login-card {
                    animation: slideIn 1s ease-out;
                }

                @@keyframes slideIn {
                    0% {
                        transform: translateY(-50px);
                        opacity: 0;
                    }

                    100% {
                        transform: translateY(0);
                        opacity: 1;
                    }
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">My_Assessment</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Department" asp-action="Index">Departments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index">Employees</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Task" asp-action="Index">Task Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Task" asp-action="MyTasks">My Tasks</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - My_Assessment - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTable with AJAX simulation
            var table = $('#departmentTable').DataTable({
                "language": {
                    "search": "",
                    "searchPlaceholder": "Search departments...",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "paginate": {
                        "previous": "<i class='fas fa-chevron-left'></i>",
                        "next": "<i class='fas fa-chevron-right'></i>"
                    }
                },
                "drawCallback": function (settings) {
                    // Add fade-in animation to rows
                    $('tbody tr', this.api().table()).each(function (i) {
                        $(this).delay(i * 100).css({
                            opacity: 0
                        }).animate({
                            opacity: 1
                        }, 200);
                    });
                },
                "initComplete": function () {
                    // Add styling to DataTable elements
                    $('.dataTables_length select').addClass('form-select form-select-sm');
                    $('.dataTables_filter input').addClass('form-control form-control-sm');
                }
            });

            // Simulate AJAX loading
            function simulateAjaxLoad() {
                $('.card').css('opacity', '0.7');
                setTimeout(function () {
                    table.draw();
                    $('.card').css('opacity', '1');
                }, 800);
            }

            // Search functionality
            $('.search-box').on('keyup', function () {
                table.search(this.value).draw();
            });

            // Department filter
            $('.form-select').on('change', function () {
                if (this.value === '-- Select Department --') {
                    table.search('').draw();
                } else {
                    table.search(this.value).draw();
                }
            });

            // Add hover effects to buttons
            $('.btn').hover(function () {
                $(this).css('transform', 'translateY(-2px)');
            }, function () {
                $(this).css('transform', 'translateY(0)');
            });
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
